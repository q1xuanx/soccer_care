@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="wrapper fadeInDown">
    <div id="formContent">
        <section>
            <form id="account" method="post">
                <h2 class="active fw-bold"> Sign In </h2>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="inactive underlineHover fw-bold text-black">Register</a>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Input.Email" type="text" class="fadeIn third my-3" autocomplete="username" aria-required="true" id="login" placeholder="Tên đăng nhập" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>

                <input asp-for="Input.Password" class="fadeIn third my-3" autocomplete="current-password" aria-required="true" placeholder="Mật khẩu" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
                <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                <input id="login-submit" type="submit" class="fadeIn fourth" value="Log in"></input>
                <div id="formFooter">
                    <p>
                        <a class="underlineHover" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="underlineHover" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>