<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Product Admin - Dashboard HTML Template</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <link rel="stylesheet" href="/admin_folder/css/fontawesome.min.css">
    <link rel="stylesheet" href="/admin_folder/css/bootstrap.min.css">
    <link rel="stylesheet" href="/admin_folder/css/templatemo-style.css">
    <link rel="stylesheet" href="/admin_folder/jquery-ui-datepicker/jquery-ui.min.css" type="text/css" />
</head>

<body id="reportsPage">
    <!--Header-->
    <div class="" id="home">
        <nav class="navbar navbar-expand-xl">
            <div class="container h-100">
                <a class="navbar-brand" href="index.html">
                    <h1 class="tm-site-title mb-0">Football Admin</h1>
                </a>
                <button class="navbar-toggler ml-auto mr-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fas fa-bars tm-nav-icon"></i>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto h-100">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="Admin" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-tachometer-alt"></i>
                                Dashboard
                                <span class="sr-only"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="ManagePitch">
                                <i class="fas fa-calendar-check"></i>
                                Quản lý sân
                            </a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Admin" asp-action="ManageUser">
                                    <i class="far fa-user"></i>
                                    Accounts
                                </a>
                            </li>
                        }
                    </ul> 
                </div>
                @* @await Html.PartialAsync("/Views/Shared/_LoginPartial.cshtml") *@
            </div>
        </nav>
        <partial name="/Views/Shared/_Notification.cshtml" />
        @RenderBody()
        <!--Footer-->
        <footer class="tm-footer row tm-mt-small">
            <div class="col-12 font-weight-light">
                <p class="text-center text-white mb-0 px-4 small">
                    Copyright &copy; <b>2018</b> All rights reserved.

                    Design: <a rel="nofollow noopener" href="https://templatemo.com" class="tm-footer-link">Template Mo</a>
                </p>
            </div>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/admin_folder/js/moment.min.js"></script>
    <script src="/admin_folder/js/Chart.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/admin_folder/js/bootstrap.min.js"></script>
</body>

</html>