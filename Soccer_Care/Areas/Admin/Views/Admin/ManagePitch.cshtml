@model IEnumerable<Soccer_Care.Models.FootBallFieldModel>
@{
    ViewData["Title"] = "ManagePitch";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container mt-5">
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">&nbsp;</th>
                                <th scope="col">NAME</th>
                                <th scope="col">Address</th>
                                <th scope="col">Price</th>
                                <th scope="col">TYPE FEILD</th>
                                <th scope="col">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var item in Model)
                            {
                                <tr>
                                    <th scope="row"><input type="checkbox" /></th>
                                    <td class="tm-product-name">@item.Name</td>
                                    <td>@item.Address</td>
                                    <td>@item.Gia</td>
                                    <td>@item.IDType</td>
                                    <td>
                                        <a asp-action="Delete" asp-controller="Pitch" asp-area="Admin" asp-route-id="@item.IDFootBallField" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                        <a asp-action="Edit" asp-controller="Pitch" asp-area="Admin" asp-route-id="@item.IDFootBallField" class="tm-product-delete-link">
                                            <i class="far fa-edit tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            

                        </tbody>
                    </table>
                </div>
                <!-- table container -->
                <a asp-controller="Pitch" asp-action="Create" asp-area="Admin" class="btn btn-primary btn-block text-uppercase mb-3">Add new field</a>
            </div>
        </div>

    </div>
</div>


