@model Soccer_Care.Models.FootBallFieldModel
@inject IHttpContextAccessor accessor

<div style="height: 100px;"></div>

<div class="p-4">
    <div class="my-5">
        <h2>Sân bóng: @Model.Name</h2>
        <span class="font-weight-bold d-block">Giá: @Model.Gia</span>
        <span>Địa chỉ: @Model.Address</span>
    </div>
    <form >
        <div class="d-flex flex-column gap-4">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" required id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="d-flex gap-4">
                <div class="form-group" style="flex: auto">
                    <label for="exampleInputPassword1">Username</label>
                    <input type="text" class="form-control" required id="exampleInputPassword1" placeholder="Username" value="@Model.Username" disabled>
                </div>
                <div class="form-group" style="flex: auto">
                    <label for="exampleInputPassword1">Số Điện Thoại</label>
                    <input type="text" class="form-control" required id="exampleInputPassword1" placeholder="Phone">
                </div>
            </div>
            <div class="d-flex gap-4">
                <div class="form-group" style="flex: auto">
                    <label for="exampleFormControlSelect1">Thời gian đặt</label>
                    <select class="form-control" required id="exampleFormControlSelect1">
                        <option>17:00</option>
                        <option>18:30</option>
                        <option>20:00</option>
                        <option>21:30</option>
                        <option>23:00</option>
                    </select>
                </div>
                <div class="form-group" style="flex: auto">
                    <label for="exampleFormControlSelect1">Loại sân</label>
                    <select class="form-control" required id="exampleFormControlSelect1">
                        <option>Sân 5</option>
                        <option>Sân 7</option>
                        <option>Sân 11</option>
                        <option>Sân Futsal</option>
                    </select>
                </div>
            </div>
        </div>
        
        <button asp-action="DatSanConfirm" asp-controller="PitchBall" type="submit" class="btn btn-primary mt-3 justify-content-end">Xác nhận</button>
    </form>
</div>

